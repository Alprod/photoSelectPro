{% extends 'base.html.twig' %}

{% block title %}New groupe{% endblock %}
{% block header %}
    {% include 'includes/header/_header.html.twig' %}
{% endblock %}

{% block body %}
<section class="relative max-w-7xl mx-auto py-10">
    <div class="absolute inset-0">
		<div class="absolute inset-y-0 left-0 w-1/2 bg-gray-100 rounded-2xl"></div>
	</div>
    <div class="relative bg-transparent max-w-7xl mx-auto lg:grid lg:grid-cols-5 lg:rounded-2xl">
        <div class="rounded-2xl py-16 px-4 sm:px-6 lg:col-span-2 lg:px-8 lg:py-24 xl:pr-12">
            <div class="sticky top-0 inset-x-0 max-w-xl mx-auto pb-4">
                <h2 class="text-2xl font-extrabold tracking-tight text-gray-900 sm:text-3xl">Cr√©er un groupe</h2>
                <p class="mt-3 text-lg leading-6 text-gray-600">
                    Prenez le temps de construire vos groupe
                </p>
            </div>
            <div class="aspect-w-10 aspect-h-6 sm:aspect-w-2 sm:aspect-h-1 lg:aspect-w-1">
                <img class="object-cover object-center rounded-3xl shadow-2xl" src="{{ asset('images/site-images/jeppe-hove-jensen.jpg') }}" alt="jeppe-hove-jensen sur unsplash.com">
            </div>
        </div>
        <div class="bg-transparent py-16 px-4 sm:px-6 lg:col-span-3 lg:py-24 lg:px-8 xl:pr-12">
            <div class="max-w-7xl">
                {{ form_start(formGroup, { 'attr': {'class': 'flex flex-col space-y-6 py-10'} }) }}
                <div>
                    {{ form_label(formGroup.name) }}
                    {{ form_widget(formGroup.name) }}
                	<span class="text-danger-700 text-md">{{ form_errors(formGroup.name) }}</span>
                    <span class="text-sm text-gray-400">{{ form_help(formGroup.name) }}</span>
                </div>
                <div>
                    {{ form_label(formGroup.maxPersonByGroup) }}
                    {{ form_widget(formGroup.maxPersonByGroup) }}
                    <span class="text-danger-700 text-md">{{ form_errors(formGroup.maxPersonByGroup) }}</span>
                    <span class="text-sm text-gray-400">{{ form_help(formGroup.maxPersonByGroup) }}</span>
                </div>
                <button type="submit" class="btn-primary max-w-md">Valider</button>
                {{ form_end(formGroup) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
