
		<!-- This example requires Tailwind CSS v2.0+ -->
		<!-- Global notification live region, render this permanently at the end of the document -->
		<div aria-live="assertive" class="fixed inset-0 flex items-end px-4 py-6 pointer-events-none sm:p-6
		iphone:items-start">
			<div class="w-full flex flex-col items-center space-y-4 iphone:items-end">
				<!--
				  Notification panel, dynamically insert this into the live region when it needs to be displayed
			
				  Entering: "transform ease-out duration-300 transition"
					From: "translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
					To: "translate-y-0 opacity-100 sm:translate-x-0"
				  Leaving: "transition ease-in duration-100"
					From: "opacity-100"
					To: "opacity-0"
				-->
				<div class="max-w-sm w-full bg-red-200 shadow-lg rounded-lg pointer-events-auto ring-1 ring-black
				ring-opacity-5 overflow-hidden">
					<div class="p-4">
						<div class="flex items-start">
							<div class="flex-shrink-0">
								<!-- Heroicon name: outline/check-circle -->
								{% if label == 'success' %}
									<svg class="h-6 w-6 text-green-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
									</svg>
								{% else %}
									<svg class="h-6 w-6 text-{{ label }}-500"
									     xmlns="http://www.w3.org/2000/svg"
									     fill="none"
									     viewBox="0 0 24 24"
									     stroke-width="1.5"
									     stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
									</svg>
								{% endif %}
								
							</div>
							<div class="ml-3 w-0 flex-1 pt-0.5">
								<p class="fonts-size font-medium text-red-900">DÃ©soler !!!!</p>
								<p class="mt-1 text-sm iphone:text-md xs:text-lg fullHD:text-xl text-red-700">{{
									message }}</p>
							</div>
							<div class="ml-4 flex-shrink-0 flex">
								<button class="bg-red-200 rounded-md inline-flex text-gray-500 hover:text-gray-700
								focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
									<span class="sr-only">Close</span>
									<!-- Heroicon name: solid/x -->
									<svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
										<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
									</svg>
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	
	